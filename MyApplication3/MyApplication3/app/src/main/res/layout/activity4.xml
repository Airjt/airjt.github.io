<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2C2C2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#fff"
        android:id="@+id/line1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="18dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:layout_below="@+id/line1"
        android:id="@+id/line2">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img20815f2ead7ad0"/>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="80dp">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="艾薇儿"
            android:textSize="20sp"
            android:id="@+id/t1"
            android:textColor="#000000"/>
        <TextView
           android:layout_below="@id/t1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一期一会"
            android:textColor="#000000"
            />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_below="@+id/line2"
    android:background="#fff"
        android:id="@+id/line3"
    >
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img20215f2eab4850"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="照片"
        android:textSize="30sp"
        android:textColor="#000"
        android:id="@+id/text1"
        />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/line3"
        android:background="#fff"
        android:id="@+id/line4"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img20515f2ead7ad0"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textSize="30sp"
            android:textColor="#000"
            android:id="@+id/text2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/line4"
        android:background="#fff"

        >
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img13156c4815328"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出"

            android:textSize="30sp"
            android:textColor="#000"
            android:id="@+id/txt"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sssssssss"
            android:id="@+id/home"/>
        <ImageView
            android:layout_marginLeft="80dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/xxxxxxxxxx"
            android:id="@+id/email"/>
        <ImageView
            android:layout_marginLeft="70dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/xxxx"
            android:id="@+id/my"/>
    </LinearLayout>
</RelativeLayout>